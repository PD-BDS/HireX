# Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED - OpenAI Configuration
# ============================================
MODEL=gpt-4o-mini
OPENAI_API_KEY=your_openai_api_key_here
CHROMA_OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# Storage Configuration
# ============================================
# Options: 'local' for local storage or Azure Files
REMOTE_STORAGE_PROVIDER=local

# ============================================
# OPTIONAL - Azure / Custom Storage Path
# ============================================
# Leave empty for default local path
# For Azure App Service, this is automatically set by the deployment script
KNOWLEDGE_STORE_PATH=

# ============================================
# Application Configuration
# ============================================
# Minimum interval between knowledge store syncs (seconds)
KNOWLEDGE_SYNC_MIN_INTERVAL=30

# Use Mem0 for memory (experimental)
RESUME_ASSISTANT_USE_MEM0=false
