# Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED - OpenAI Configuration
# ============================================
MODEL=gpt-4o-mini
OPENAI_API_KEY=your_openai_api_key_here
CHROMA_OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# Storage Configuration
# ============================================
# Options: 'local' for local storage, 'r2' for Cloudflare R2
REMOTE_STORAGE_PROVIDER=local

# ============================================
# OPTIONAL - Cloudflare R2 Cloud Storage
# ============================================
# Only needed if REMOTE_STORAGE_PROVIDER=r2
# Leave empty for local development
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_OBJECT_PREFIX=knowledge_store
R2_ENDPOINT_URL=

# ============================================
# Application Configuration
# ============================================
# Minimum interval between knowledge store syncs (seconds)
KNOWLEDGE_SYNC_MIN_INTERVAL=30

# Use Mem0 for memory (experimental)
RESUME_ASSISTANT_USE_MEM0=false
